package pack.cap.module8.io;

import java.io.BufferedOutputStream;
import java.io.FileOutputStream;

public class BufferedStreamExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
String filePath = "D://sample.txt";
try(BufferedOutputStream bos = new BufferedOutputStream( new FileOutputStream(filePath))){
	String  content = (" This is a test content for Buffered OutputStream in Java ");
	bos.write(content.getBytes());
	bos.flush();//ensure all the data is written to the file 
	System.out.println(" Data written to the file successfully using bufferedstream ");
	
}catch (Exception e) {
	// TODO: handle exception
}
	}

}
