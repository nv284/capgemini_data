package pack.cap.module8.io;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

public class ReadFile {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
try {
	FileInputStream fis = new  FileInputStream("D:\\jenkins_command.txt");
	
	int value = fis.read();
	System.out.println("reading a value in byte from "+ value);
	System.out.println((char)value);
	fis.close();
	
	
	//=============================
	Path path = Paths.get("D:\\sample.txt");
	Path p = Files.createFile(path);
	System.out.println("File created at path ", +p);
	FileOutputStream fos = new FileOutputStream(path);
	String content = " Hello this is a samle txt file in D: drive , we are learning Java input/output operation "; 
	fos.write(content.getBytes());
	System.out.println("Data written successfully!!!");
	
}catch(Exception e ) {
	System.out.println(e);
}
	}

}
